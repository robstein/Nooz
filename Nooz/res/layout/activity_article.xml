<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="#FFF"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:weightSum="1" >

        <ImageView
            android:id="@+id/article_category_logo"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:contentDescription="Category Logo"
            android:src="@drawable/cancel_new_article" />

        <TextView
            android:id="@+id/article_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/article_category_logo"
            android:gravity="center"
            android:padding="4dp"
            android:text="Default headline"
            android:textSize="23sp" />

        <ImageView
            android:id="@+id/article_info"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:contentDescription="Category Logo"
            android:src="@drawable/info_arts_and_life" />
    </RelativeLayout>

    <com.nooz.nooz.widget.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="61dp"
        android:layout_marginTop="61dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.nooz.nooz.widget.SquareImageView
                android:id="@+id/article_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                />

            <RelativeLayout
                android:id="@+id/article_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/article_image"
                android:background="@drawable/headline_transition"
                android:padding="20dp"
                android:clickable="true"
                android:tag="sticky-hastransparancy" >

                <TextView
                    android:id="@+id/headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:maxLines="4"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:text="Default headline"
                    android:textColor="#FEFEFE"
                    android:textColorHint="#FEFEFE"
                    android:textSize="28dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/author_picture"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/headline"
                    android:layout_marginTop="6dp"
                    android:contentDescription="Profile Picture"
                    android:src="@drawable/thumb_profile_example" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/headline"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/author_picture"
                    android:singleLine="true"
                    android:text="Default Author"
                    android:textColor="#FEFEFE"
                    android:textColorHint="#FEFEFE"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/caption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/article_image"
                android:padding="20dp"
                android:singleLine="false"
                android:text="@string/example_caption"
                android:textColor="#4D4D4D"
                android:textSize="14sp" />
        </RelativeLayout>
    </com.nooz.nooz.widget.StickyScrollView>

    <LinearLayout
        android:id="@+id/relevance_footer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#FFF"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/button_relevant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/text_button"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/relevance_score"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/relevance_score_arts_and_life"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/relevance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:singleLine="true"
                android:text="RELEVANT"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/button_irrelevant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="8dp"
            android:background="@drawable/text_button"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/irrelevance_score"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/relevance_score_arts_and_life"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/irrelevance_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:singleLine="true"
                android:text="IRRELEVANT"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_comments"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            android:src="@drawable/comments_arts_and_life_fullsize" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/relevance_footer"
        android:background="#FF969696" />

</RelativeLayout>