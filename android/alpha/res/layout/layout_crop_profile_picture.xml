<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_crop_picture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1F20"
    android:visibility="invisible" >

    <RelativeLayout
        android:id="@+id/crop_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF" >

        <ImageView
            android:id="@+id/button_back_from_crop"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:clickable="true"
            android:contentDescription="Back"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/button_crop_ok"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"
            android:clickable="true"
            android:contentDescription="OK"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_accept" />
    </RelativeLayout>

    <com.nooz.nooz.widget.ScaleImageView
        android:id="@+id/profile_picture_uncropped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/crop_action_bar"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true" />

</RelativeLayout>